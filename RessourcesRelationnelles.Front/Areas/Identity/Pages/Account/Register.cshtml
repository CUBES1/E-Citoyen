@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Inscription</title>
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css">
</head>

<body style="background-color: #00cba9">
<main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">
        <div class="card login-card">
            <div class="row no-gutters">
                <div class="col-md-5">
                    <img src="/img/illu.jpeg" alt="login" class="login-card-img">
                </div>
                <div class="col-md-7">
                    <div class="card-body" style="text-align: center;">
                        <div class="brand-wrapper">
                            <a href="/">
                                <img src="/img/Logo Ressources Relationnelles.svg" alt="logo" class="logo">
                            </a>
                        </div>
                        <p class="login-card-description">Inscription</p>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="margin-left: auto;margin-right: auto;">

                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email" class="sr-only"></label>
                                <input asp-for="Input.Email" class="form-control" placeholder="Adresse e-mail"/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.FirstName" class="sr-only"></label>
                                <input asp-for="Input.FirstName" class="form-control" placeholder="Prénom" >
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.LastName" class="sr-only"></label>
                                <input asp-for="Input.LastName" class="form-control" placeholder="Nom de famille">
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                             
                            <div class="form-group">
                                <label asp-for="Input.DateOfBirth" class="sr-only"></label>
                                <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Date de naissance">
                                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Country" class="sr-only"></label>
                                <input asp-for="Input.Country" class="form-control" placeholder="Pays">
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password" class="sr-only"></label>
                                <input asp-for="Input.Password" class="form-control" placeholder="Mot de passe"/>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmer mot de passe"/>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <p>Optionnel</p>
                            <div class="form-group">
                                <label asp-for="Input.City" class="sr-only"></label>
                                <input asp-for="Input.City" class="form-control" placeholder="Ville">
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Region" class="sr-only"></label>
                                <input asp-for="Input.Region" class="form-control" placeholder="Région">
                                <span asp-validation-for="Input.Region" class="text-danger"></span>
                            </div>
                            <input class="btn btn-block login-btn mb-4" type="submit" value="S'inscire">
                        </form>

                        <div>
                            <div style="width: 80%; height: 14px; border-bottom: 1px solid black; text-align: center;margin-left: auto;margin-right: auto;">
                                <span style="font-size: 18px; background-color: #ffffff; padding: 0 10px;">
                                    OU
                                </span>
                            </div>
                            <div style="display: flex;justify-content: center;">
                                <a href="#!">
                                    <img src="/img/franceconnect-bouton.png" class="franceConnectButton"/>
                                </a>
                            </div>
                        </div>
                        <div class="login-card-footer-last-item">
                            <p class="forgot-password-link">
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-reset">
                                    Vous avez déjà un compte ?
                                </a>
                            </p>
                        </div>
                        <nav class="login-card-footer-nav ">
                            @*<div>
                                <a href="#!">
                                    <img src="/img/app_store_icon.png" class="downloadIcons"/>
                                </a>
                                <a href="#!">
                                    <img src="/img/GooglePlay2-FR.png" class="downloadIcons"/>
                                </a>
                            </div>*@
                            <a href="#!">Conditions général d'utilisation</a>
                            <br/>
                            <a href="#!">Politique de confidentialité</a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>